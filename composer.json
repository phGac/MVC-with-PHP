{
    "name": "phgac/mvc-with-php",
    "type": "project",
    "description": "MVC",
    "keywords": [
        "mvc"
    ],
    "version": "1.0.0",
    "authors": [
        {
            "name": "Philippe Gac Balada",
            "email": "phgacbalada@gmail.com"
        }
    ],
    "require": {
        "php":"^7.1",
        "nikic/fast-route": "^1.3",
        "twig/twig": "^2.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Kernel\\": "Libs/Kernel/",
            "App\\": [
                "app/controllers",
                "app/models"
            ]
        },
        "classmap": [
            "app/models",
            "app/controllers"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
